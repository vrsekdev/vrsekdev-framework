@inherits LayoutComponentBase

@inject IStoreAccessor<AppStore> AppStoreAccessor

<DependencyLoader />

<ConditionalView Condition="!AppStoreAccessor.Store.IsLoading">
    <Passed>
        <div class="sidebar">
            <NavMenu />
        </div>

        <div class="main">
            <div class="top-row px-4">
                <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
            </div>

            <div class="content px-4">
                @Body
            </div>
        </div>
    </Passed>
    <Failed>
        Loading content...
    </Failed>
</ConditionalView>

